#include <bits/stdc++.h>
using namespace std;

int main() {
    double x1, y1, x2, y2, x3, y3;
    
    cin >> x1 >> y1 >> x2 >> y2 >> x3 >> y3;
    
    double numerator = (x2 - x1)*(y3 - y1) - (x3 - x1)*(y2 - y1);
    double denominator = sqrt((x2 - x1)*(x2 - x1) + (y2 - y1)*(y2 - y1));
    double distance = abs(numerator) / denominator;
    
    cout << fixed << setprecision(4) << distance << endl;

    return 0;
}

